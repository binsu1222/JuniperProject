# =============================================================================
# 웹서버 포트 설정
# =============================================================================
# Docker 컨테이너는 외부 포트를 노출하지 않으므로, 이 설정은 삭제
# PUBLISHED_PORT=17443

# 컨테이너 내부 포트 (Flask 앱)
APP_PORT=5000

# =============================================================================
# Flask 애플리케이션 설정
# =============================================================================
FLASK_ENV=production
FLASK_DEBUG=false

# =============================================================================
# DGX 게이트웨이 설정 (백엔드 연동)
# =============================================================================
# 컨테이너에서 호스트(Nginx)로 접근하도록 설정
GATEWAY_BASE=https://223.194.92.152:443

# Nginx가 SSL을 처리하므로 내부 통신은 false
GW_VERIFY=false

# =============================================================================
# LLM 모델 설정
# =============================================================================
# Ollama 서비스에서 사용할 모델 (쿼리 분석용)
MODEL_NAME=gpt-oss:20b

# =============================================================================
# 백엔드 서비스 타임아웃 설정 (초)
# =============================================================================
# Ollama LLM 타임아웃 (nginx: 300s)
LLM_TIMEOUT_S=30

# PyOD 장애탐지 타임아웃 (nginx: 60s)
DETECT_TIMEOUT_S=60

# LLM Agent 타임아웃 (nginx: 60s)
# AGENT_TIMEOUT_S=60

# =============================================================================
# 서비스별 모델 정보 (참고용)
# =============================================================================
# /api/* → ollama:11434 → gpt-oss:20b
# /detect → detector:2040 → PyOD
# /process-anomaly → llm_agent:8002 → mistral-nemo
